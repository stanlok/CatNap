<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emily.catnap">

    <application
        android:allowBackup="true"
        android:name="com.example.emily.catnap.GlobalVars"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CatNap"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //----------------------------------------------------

        <receiver android:name=".MyAdmin" android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                android:resource="@xml/policies" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>

        </receiver>
        //-------------------------------------------------------

        <activity android:name=".TermsAndConditions"></activity>
        <activity android:name=".Customize" />
        <activity android:name=".Statistics" />
        <activity
            android:name=".Credits"
            android:label="@string/title_activity_credits"
            android:theme="@style/AppTheme.NoActionBar" />

        </receiver> //Added by Austin for screenlock

        </application>

</manifest>